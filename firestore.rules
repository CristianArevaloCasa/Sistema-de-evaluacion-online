rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Reglas para la colecci칩n de evaluaciones
    match /evaluaciones/{evaluacionId} {
      // Permitir leer solo evaluaciones del usuario autenticado
      allow read: if request.auth != null && resource.data.userId == request.auth.uid;
      
      // Permitir crear evaluaciones si el usuario est치 autenticado
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      
      // Permitir actualizar y eliminar solo si el usuario es el propietario
      allow update, delete: if request.auth != null && resource.data.userId == request.auth.uid;
    }
    
    // Reglas para la colecci칩n de respuestas
    match /respuestas/{respuestaId} {
      // Permitir leer respuestas relacionadas con evaluaciones del usuario
      allow read: if request.auth != null;
      
      // Permitir crear respuestas si el usuario est치 autenticado
      allow create: if request.auth != null && request.resource.data.estudianteId == request.auth.uid;
      
      // Permitir actualizar respuestas propias
      allow update: if request.auth != null && resource.data.estudianteId == request.auth.uid;
      
      // Solo el propietario puede eliminar
      allow delete: if request.auth != null && resource.data.estudianteId == request.auth.uid;
    }
  }
}
